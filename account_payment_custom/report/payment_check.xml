<odoo>    <template id="payment_personal_check_template">        <t t-call="web.html_container">            <t t-foreach="docs" t-as="o">                <t t-call="web.basic_layout">                    <div class="page" style="direction: rtl;">                        <html>                            <body>                                <div class="row" style="text-align:right;">                                    <div class="col-2"></div>                                    <div class="col-3">                                        التاريخ :                                        <span t-field="o.date"/>                                    </div>                                    <div class="col-7"></div>                                </div>                                <br/>                                <div class="row justify-content-center" style="text-align:center!important;">                                    <div class="col-4"></div>                                    <div class="col-4"                                         style="    color:red;font-size:15px !important;border:1px solid red;">                                        <strong>                                            <center>لايصرف الا للمستفيد الأول</center>                                        </strong>                                    </div>                                    <div class="col-4"></div>                                </div>                                <br/>                                <div class="row">                                    <div class="col-7"></div>                                    <div class="col-3">                                        <span t-field="o.partner_id.name" dir="LTR"/>                                    </div>                                    <div class="col-2"></div>                                </div>                                <br/>                                <div class="row" style="text-align:right;">                                    <div class="col-2"></div>                                    <div class="col-3">                                        المبلغ:                                        <span t-field="o.amount"/>                                    </div>                                    <div class="col-4">                                        <span                                                t-esc="o.currency_id.with_context(lang='ar_001').amount_to_text(o.amount)"/>                                    </div>                                    <div class="col-3"></div>                                </div>                            </body>                            <style type="text/css">                                body{                                font-family: 'Lateef', serif;                                font-size:22px !important;                                }                                .titleb{                                font-weight:bold;                                font-size:27px !important;                                }                                td{                                border: 1px solid #785838!important;                                }                                .main_table{                                text-align: right !important;;                                margin-top:20px !important;;                                }                                .main_table tr{                                line-height:12px !important;                                }                            </style>                        </html>                    </div>                </t>            </t>        </t>    </template>    <template id="payment_company_check_template">        <t t-call="web.html_container">            <t t-foreach="docs" t-as="o">                <t t-call="web.basic_layout">                    <div class="page" style="direction: ltr;">                        <html>                            <body>                                <div class="row">                                    <div class="col-2"></div>                                    <div class="col-3">                                        Date :                                        <span t-field="o.date"/>                                    </div>                                    <div class="col-7"></div>                                </div>                                <br/>                                <div class="row justify-content-center" style="text-align:center!important;">                                    <div class="col-4"></div>                                    <div class="col-4"                                         style="    color:red;font-size:15px !important;border:1px solid red;">                                        <strong>                                            <center>A/C PAYEE ONLY</center>                                        </strong>                                    </div>                                    <div class="col-4"></div>                                </div>                                <br/>                                <div class="row">                                    <div class="col-2"></div>                                    <div class="col-3">                                        <span t-field="o.partner_id.name"/>                                    </div>                                    <div class="col-7"></div>                                </div>                                <br/>                                <div class="row">                                    <div class="col-2"></div>                                    <div class="col-3">                                        Amount:                                        <span t-field="o.amount"/>                                    </div>                                    <div class="col-4">                                        <span                                                t-esc="o.currency_id.with_context(lang='en_US').amount_to_text(o.amount)"/>                                    </div>                                    <div class="col-3"></div>                                </div>                            </body>                            <style type="text/css">                                body{                                font-family: 'Lateef', serif;                                font-size:22px !important;                                }                                .titleb{                                font-weight:bold;                                font-size:27px !important;                                }                                td{                                border: 1px solid #785838!important;                                }                                .main_table{                                text-align: right !important;;                                margin-top:20px !important;;                                }                                .main_table tr{                                line-height:12px !important;                                }                            </style>                        </html>                    </div>                </t>            </t>        </t>    </template>    <record id="report_personal_check_action" model="ir.actions.report">        <field name="name">Personal Check</field>        <field name="model">account.payment</field>        <field name="report_type">qweb-pdf</field>        <field name="report_name">account_payment_custom.payment_personal_check_template</field>        <field name="report_file">account_payment_custom.payment_personal_check_template</field>        <field name="binding_model_id" ref="account.model_account_payment"/>        <field name="binding_type">report</field>        <field name="print_report_name">'Personal Check Report'</field>        <field name="paperformat_id" ref="account_payment_custom.paper_format_payment_method_pdf"/>    </record>    <record id="report_company_check_action" model="ir.actions.report">        <field name="name">Company Check</field>        <field name="model">account.payment</field>        <field name="report_type">qweb-pdf</field>        <field name="report_name">account_payment_custom.payment_company_check_template</field>        <field name="report_file">account_payment_custom.payment_company_check_template</field>        <field name="binding_model_id" ref="account.model_account_payment"/>        <field name="binding_type">report</field>        <field name="print_report_name">'Company Check Report'</field>        <field name="paperformat_id" ref="account_payment_custom.paper_format_payment_method_pdf"/>    </record></odoo>
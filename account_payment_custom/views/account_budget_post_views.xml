<odoo>
    <data>
        <record id="account_budget_post_form_view_inherit" model="ir.ui.view">
            <field name="name">account.budget.post.form.view.inherit</field>
            <field name="model">account.budget.post</field>
            <field name="inherit_id" ref="account_budget.view_budget_post_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="budget_position_number"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
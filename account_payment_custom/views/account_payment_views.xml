<odoo>    <record id="view_account_payment_form_inherited" model="ir.ui.view">        <field name="name">account.payment.form.inherited</field>        <field name="model">account.payment</field>        <field name="inherit_id" ref="account.view_account_payment_form"/>        <field name="arch" type="xml">            <xpath expr="//header" position="inside">                <button name="action_print_payment_method_check" type="object"                        string="Print Payment Method Check"                        class="oe_highlight"                        states="posted"/>            </xpath>            <xpath expr="//group[@name='group2']//field[@name='payment_method_line_id']" position="after">                <field name="manual_check_no"                       attrs="{'invisible': [('payment_method_code', '!=', 'check_printing')], 'readonly': [('state', '!=', 'draft')]}"/>            </xpath>            <xpath expr="//field[@name='ref']" position="replace">                <field name="ref" widget="text"                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>                <field name="reference_sequence"/>            </xpath>            <xpath expr="//form//sheet//group//group[@name='group1']" position="after">                <group string="Case">                    <field name="qid_number"                           attrs="{'readonly': [('state', '!=', 'draft')]}"/>                    <field name="case_name"                           attrs="{'readonly': [('state', '!=', 'draft')]}"/>                    <field name="case_number"                           attrs="{'readonly': [('state', '!=', 'draft')]}"/>                </group>            </xpath>            <xpath expr="//field[@name='partner_id'][2]" position="attributes">                <attribute name="string">Beneficiary</attribute>            </xpath>        </field>    </record>    <record id="view_account_payment_tree_inherit_tree" model="ir.ui.view">        <field name="name">view.account.payment.tree.inherit.tree</field>        <field name="model">account.payment</field>        <field name="inherit_id" ref="account.view_account_payment_tree"/>        <field name="arch" type="xml">            <xpath expr="//field[@name='partner_id']" position="after">                <field name="manual_check_no"/>            </xpath>            <xpath expr="//field[@name='state']" position="before">                <field name="partner_bank_id" string="Vendor Bank Account" optional="hide"/>                <field name="case_name" optional="hide"/>                <field name="qid_number" optional="hide"/>            </xpath>        </field>    </record>    <record id="account_payment_cheque_search" model="ir.ui.view">        <field name="name">account.payment.cheque.search</field>        <field name="model">account.payment</field>        <field name="inherit_id" ref="account.view_account_payment_search"/>        <field name="arch" type="xml">            <xpath expr="//field[@name='journal_id']" position="after">                <field name="manual_check_no"/>            </xpath>        </field>    </record></odoo>
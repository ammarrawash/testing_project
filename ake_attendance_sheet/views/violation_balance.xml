<odoo>    <record id="hr_employee_violation_balance_tree_view" model="ir.ui.view">        <field name="name">hr.employee.violation.balance.tree</field>        <field name="model">hr.employee</field>        <field name="priority" eval="100"/>        <field name="arch" type="xml">            <tree string="Employee Violation Balance">                <field name="name"/>                <field name="parent_id"/>                <field name="department_id"/>                <field name="allowed_violation_balance" widget="float_time"/>            </tree>        </field>    </record>    <record id="hr_employee_violation_balance_tree_action" model="ir.actions.act_window">        <field name="name">Employee Violation Balance</field>        <field name="type">ir.actions.act_window</field>        <field name="res_model">hr.employee</field>        <field name="view_mode">tree</field>        <field name="view_id" ref="hr_employee_violation_balance_tree_view"/>    </record>    <menuitem id="hr_employee_violation_balance_menu" name="Employee Violation Balance"              parent="ake_early_late_attandence.taqat_menu_hr_attendance_mainmenu"              action="hr_employee_violation_balance_tree_action" sequence="15"/></odoo>
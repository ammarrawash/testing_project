<odoo>

    <record id="view_employee_form_attendance_api_custom" model="ir.ui.view">
        <field name="name">hr.employee.form.view.custom</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="attendance_configuration" string="Attendance Configuration">
                    <group>
                        <field name="punch_user_id"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>


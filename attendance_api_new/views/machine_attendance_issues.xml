<odoo>    <record id="machine_attendance_issue_tree_view" model="ir.ui.view">        <field name="name">machine.issue.record.tree.view</field>        <field name="model">machine.attendance.record</field>        <field name="priority">1000</field>        <field name="arch" type="xml">            <tree decoration-muted="state == 'skip'"                  decoration-danger="state  == 'failure'"                  decoration-success="state == 'success'"                  editable="bottom"            >                <header>                    <button name="action_create_attendance" string="Create Attendance" type="object"/>                    <button name="action_skip_record" string="Skip Records" type="object"/>                </header>                <field name="created_from_machine" invisible="1"/>                <field name="employee_id" attrs="{'readonly': [('created_from_machine', '=', True)]}"/>                <field name="punch_type" attrs="{'readonly': [('created_from_machine', '=', True)]}"/>                <field name="punch_time" attrs="{'readonly': [('created_from_machine', '=', True)]}"/>                <field name="state" readonly="1"/>                <field name="machine_record_id" readonly="1"/>                <field name="error_message" optional="hide" readonly="1"/>                <button name="action_skip_record" string="Skip" icon="fa-chevron-right" type="object"/>            </tree>        </field>    </record>    <record id='action_machine_attendance_issue' model='ir.actions.act_window'>        <field name="name">Machine Attendance Issues</field>        <field name="res_model">machine.attendance.record</field>        <field name="view_mode">tree</field>        <field name="view_id" ref="machine_attendance_issue_tree_view"/>        <field name="domain">[('state','=','failure')]</field>        <field name="search_view_id" ref="attendance_api_new.machine_attendance_view_filter"/>        <field name="context">{            'search_default_groupby_employee': True,            'search_default_groupby_punch_time': True,            'gui_create':True            }        </field>    </record>    <menuitem id="menu_machine_attendance_issue" name="Machine Attendance Issues"              action="action_machine_attendance_issue"              groups="hr_attendance.group_hr_attendance_user"              parent="menu_attendance_machine"              sequence="20"    /></odoo>
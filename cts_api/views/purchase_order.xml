<odoo>    <record id="purchase_order_form" model="ir.ui.view">        <field name="name">purchase.order.view.form.inherit</field>        <field name="model">purchase.order</field>        <field name="inherit_id" ref="jbm_minor_integration.purchase_order_form"/>        <field name="arch" type="xml">            <xpath expr="//page[@name='accommodation']" position="after">                <page name="cts_api" string="CTS API"                      attrs="{'invisible': [('accommodation_api', '!=', True)]}" groups="base.group_erp_manager">                    <group>                        <group>                            <field name="cts_api_status" readonly="1"/>                        </group>                        <group>                            <field name="cts_api_response" readonly="1"/>                        </group>                        <group>                            <field name="cts_api_response_auth" readonly="1"/>                        </group>                    </group>                </page>            </xpath>        </field>    </record></odoo>
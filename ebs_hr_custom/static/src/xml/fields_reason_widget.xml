<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="schedule_date_widget">
        <div class="modal reason_modal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">Schedule Date</h5>
              </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-2" style="float: right;">
                            <span>Date</span>
                        </div>
                        <div class="col-lg-10">
                            <input type="date" class="form-control" id="schedule_date"/>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                <button type="button" class="btn btn-primary save-record">Save changes</button>
                    <button type="button" class="btn btn-secondary close-modal" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
    </t>
</templates>
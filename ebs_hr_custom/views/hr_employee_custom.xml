                <xpath expr="//notebook/page[last()]" position="after">
                    <page name="pension_config" string="Pension"
                          attrs="{'invisible': [('wassef_employee_type','!=','perm_staff')]}"
                          groups="hr.group_hr_manager">
                        <group>
                            <group>
                                <field name="pension_basic"/>
                                <field name="pension_social"/>
                                <field name="pension_accommodation"/>

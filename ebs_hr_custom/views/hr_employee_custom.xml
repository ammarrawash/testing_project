            </field>
        </record>

        <record id="hr_employee_view_search" model="ir.ui.view">
            <field name="name">hr.employee.search.view.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="name" string="Employee"
                           filter_domain="['|', '|','|', ('registration_number', 'ilike', self),('employee_name_in_arabic', 'ilike', self),
                           ('work_email', 'ilike', self), ('name', 'ilike', self)]"/>
                </xpath>
                <xpath expr="//field[@name='job_id']" position="after">
                    <field name="registration_number"/>
                    <field name="qid_doc_number"/>
                    <field name="passport_doc_number"/>
                    <!--                    <field name="project_id" filter_domain="[('project_id.project_id.name','ilike',self)]"/>-->
                    <filter name="missing_bank_account" string="Missing Bank Account"
                            domain="[('bank_account_id', '=', False)]"/>
                    <filter name="draft_employees" string="Draft Employees"
                            domain="[('employee_states', '=', 'draft')]"/>
                    <filter name="confirmed_employees" string="Confirmed Employees"
                            domain="[('employee_states', '=', 'confirmed')]"/>
                    <filter name="temp_employees" string="Temporary Employees"
                            domain="[('wassef_employee_type', '=', 'temp')]"/>
                    <filter name="staff_employees" string="Permanent Staff Employees"
                            domain="[('wassef_employee_type', '=', 'perm_staff')]"/>
                    <filter name="in_house_employees" string="Permanent In house Employees"
                            domain="[('wassef_employee_type', '=', 'perm_in_house')]"/>
                    <filter name="employee_gross_salary" string="Employees with gross salary less than 5000"
                            domain="[('contract_id.gross_salary', '&lt;', 5000), ('contract_id.state', '=', 'open')]"/>
                    <filter name="missing_bank_account_gross_salary" string="Missing Bank and Gross &lt; 5000"
                            domain="[('bank_account_id', '=', False), ('contract_id.gross_salary', '&lt;', 5000)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Employee Category" name="employee_category_group" domain="[]"
                                context="{'group_by':'wassef_employee_type'}"/>
                    </group>
                </xpath>
            </field>
        </record>
        <record id="hr.open_view_employee_list_my" model="ir.actions.act_window">
            <field name="name">Employees</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">kanban,tree,form,activity</field>
            <field name="domain">[('is_classified','=',False)]</field>
            <field name="context">{'search_default_employee_category_group': 1}</field>
            <field name="view_id" eval="False"/>
            <field name="search_view_id" ref="hr.view_employee_filter"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a new employee
                </p>
                <p>
                    With just a quick glance on the Odoo employee screen, you
                    can easily find all the information you need for each person;
                    contact data, job position, availability, etc.
                </p>
            </field>
        </record>
        <record id="classified_employees_action" model="ir.actions.act_window">
            <field name="name">Classified Employees</field>
            <field name="type">ir.actions.act_window</field>
            <field name="context">{'default_is_classified': True}</field>
            <field name="domain">[('is_classified','=',True)]</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="classified_contracts_action" model="ir.actions.act_window">
            <field name="name">Classified Contracts</field>
            <field name="type">ir.actions.act_window</field>
            <field name="context">{'default_is_classified': True}</field>
            <field name="domain">[('is_classified','=',True)]</field>
            <field name="res_model">hr.contract</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.server" id="action_create_employee_portal_user">
            <field name="name">Create Employee Portal User</field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="binding_model_id" ref="model_hr_employee"/>
            <field name="state">code</field>
            <field name="code">
                if records:
                action = records.create_employee_portal_user()
            </field>
        </record>

        <!--        <record id="employees_confidential_action" model="ir.actions.act_window">-->

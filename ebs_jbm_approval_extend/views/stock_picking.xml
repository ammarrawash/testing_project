<odoo>    <!-- Inherit Form View to Modify it -->    <record id="material_request_picking_form" model="ir.ui.view">        <field name="name">Material Request Picking Form</field>        <field name="model">stock.picking</field>        <field name="inherit_id" ref="stock.view_picking_form"/>        <field name="arch" type="xml">            <xpath expr="//header" position="inside">                <field name="material_request_id" invisible="1"/>            </xpath>            <xpath expr="//button[@name='action_confirm']" position="after">                <button name="action_print_material_request_receipt"                        string="Print Receipt"                        type="object"                        class="oe_highlight"                        attrs="{'invisible':[('state','!=','done')]}"/>            </xpath>        </field>    </record></odoo>
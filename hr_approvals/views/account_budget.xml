<odoo>    <record id="budget_lines_view_tree" model="ir.ui.view">        <field name="name">crossovered.budget.lines</field>        <field name="model">crossovered.budget.lines</field>        <field name="inherit_id" ref="ebs_fusion_account.budget_lines_view_tree"/>        <field name="arch" type="xml">            <xpath expr="//field[@name='amount_of_reservation']" position="after">                <field name="remaining_amount"/>            </xpath>        </field>    </record>    <record id="budget_lines_view_form" model="ir.ui.view">        <field name="name">crossovered.budget.lines</field>        <field name="model">crossovered.budget.lines</field>        <field name="inherit_id" ref="ebs_fusion_account.budget_lines_view_form"/>        <field name="arch" type="xml">            <xpath expr="//field[@name='amount_of_reservation']" position="after">                <field name="remaining_amount"/>            </xpath>        </field>    </record></odoo>
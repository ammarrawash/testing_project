<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="employee_config_settings_view_form" model="ir.ui.view">
        <field name="name">employee.config.settings.view.form.inherit.hr.fleet</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="90"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='hr']//div[hasclass('o_settings_container')]" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="applied_on_date"/>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="applied_on_date"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
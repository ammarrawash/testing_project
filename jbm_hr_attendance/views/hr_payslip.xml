<odoo>    <record id="view_hr_payslip_attendance_sheet_form" model="ir.ui.view">        <field name="name">hr.payslip.form</field>        <field name="model">hr.payslip</field>        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>        <field name="arch" type="xml">            <xpath expr="//div[@name='button_box']" position="inside">                <field name="attendance_sheet_id" invisible="1"/>                <button name="view_related_attendance_sheet" class="oe_stat_button" icon="fa-book" type="object"                        string="Attendance Sheet" attrs="{'invisible': [('attendance_sheet_id', '=' , False)]}"/>            </xpath>            <xpath expr="//page[@name='worked_days_input']/separator[1]" position="attributes">                <attribute name="invisible">1</attribute>            </xpath>            <xpath expr="//field[@name='worked_days_line_ids']" position="attributes">                <attribute name="invisible">1</attribute>            </xpath>        </field>    </record></odoo>
<odoo>
    <record id="jbm_notification_justification_res_config_setting" model="ir.ui.view">
        <field name="name">jbm.notification.justification.res.config.setting</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_attendance.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='hr_attendance']" position="inside">
                <h2>Reject After</h2>
                <div class="row mt16 o_settings_container" name="reject_after">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <field name="reject_after"/>
                            <div class="text-muted">
                                <label for="reject_after" class="o_form_label">Reject After (Hours)</label>
                                <br/>
                                This is hours of rejection after, the system will reject any justification After these
                                hours
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
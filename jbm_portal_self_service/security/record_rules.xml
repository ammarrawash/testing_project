<odoo>    <!--    Employee-->    <record id="jbm_group_access_right_extended.jbm_hr_employee_users" model="ir.rule">        <field name="groups"               eval="[(4, ref('base_portal_user.group_user_portal'))]"/>    </record>    <record id="jbm_group_access_right_extended.jbm_hr_employee_manager_users" model="ir.rule">        <field name="groups"               eval="[(4, ref('base_portal_user.group_user_portal'))]"/>    </record>    <!--Attendance-->    <record id="portal_attendance_user_rol" model="ir.rule">        <field name="name">Portal attendance User</field>        <field ref="hr_attendance.model_hr_attendance" name="model_id"/>        <field name="groups" eval="[(4, ref('jbm_portal_self_service.group_self_service_user'))]"/>        <field name="domain_force">[             '|',                ('employee_id.user_id', '=', user.id),                ('employee_id.id', 'child_of', user.employee_id.child_ids.ids)            ]</field>    </record><!--    <record id="portal_attendance_manager_rule" model="ir.rule">--><!--        <field name="name">Portal attendance Manager</field>--><!--        <field ref="hr_attendance.model_hr_attendance" name="model_id"/>--><!--        <field name="groups" eval="[(4, ref('jbm_portal_self_service.group_self_service_manager'))]"/>--><!--        <field name="domain_force">[('employee_id', 'in', user.employee_id.child_ids.ids)]</field>--><!--    </record>-->    <!--Loan-->    <record id="portal_loan_user_rol" model="ir.rule">        <field name="name">Portal Loan User</field>        <field ref="matco_loan_management.model_hr_loan" name="model_id"/>        <field name="groups" eval="[(4, ref('jbm_portal_self_service.group_self_service_user'))]"/>        <field name="domain_force">[('employee_id', '=', user.employee_id.id)]</field>    </record>    <record id="portal_loan_manager_rule" model="ir.rule">        <field name="name">Portal Loan Manager</field>        <field ref="matco_loan_management.model_hr_loan" name="model_id"/>        <field name="groups" eval="[(4, ref('jbm_portal_self_service.group_self_service_manager'))]"/>        <field name="domain_force">[('employee_id', 'child_of', user.employee_id.id)]</field>    </record>    <!--Allowance Request-->    <record id="portal_allowance_request_user_rol" model="ir.rule">        <field name="name">Portal Allowance Request User</field>        <field ref="hr_allowance_request.model_allowance_request" name="model_id"/>        <field name="groups" eval="[(4, ref('jbm_portal_self_service.group_self_service_user'))]"/>        <field name="domain_force">[('employee_id', '=', user.employee_id.id)]</field>    </record>    <record id="portal_allowance_request_manager_rule" model="ir.rule">        <field name="name">Portal Allowance Request Manager</field>        <field ref="hr_allowance_request.model_allowance_request" name="model_id"/>        <field name="groups" eval="[(4, ref('jbm_portal_self_service.group_self_service_manager'))]"/>        <field name="domain_force">[('employee_id', 'child_of', user.employee_id.id)]</field>    </record>    <!--Leaves-->    <record id="jbm_group_access_right_extended.jbm_hr_leave_users" model="ir.rule">        <field name="groups"               eval="[(4, ref('base_portal_user.group_user_portal'))]"/>    </record>    <record id="jbm_group_access_right_extended.jbm_hr_leave_manager_users" model="ir.rule">        <field name="groups"               eval="[(4, ref('base_portal_user.group_user_portal'))]"/>    </record>    <!--Appraisal-->    <record id="jbm_hr_appraisal.jbm_hr_appraisal_users" model="ir.rule">        <field name="groups"               eval="[(4, ref('base_portal_user.group_user_portal'))]"/>    </record>    <record id="jbm_hr_appraisal.jbm_hr_appraisal_manager_users" model="ir.rule">        <field name="groups"               eval="[(4, ref('base_portal_user.group_user_portal'))]"/>    </record>    <!--Requests-->    <record id="portal_approval_requests_user_rol" model="ir.rule">        <field name="name">Portal Approval Requests User</field>        <field ref="approvals.model_approval_request" name="model_id"/>        <field name="groups" eval="[(4, ref('jbm_portal_self_service.group_self_service_user'))]"/>        <field name="domain_force">['|', ('request_owner_id.id', '=', user.id), ('approver_ids.user_id.id', '=',            user.id)]        </field>    </record>    <record id="jbm_group_access_right_extended.jbm_rule_for_only_and_his_child_approval_request" model="ir.rule">        <field name="groups" eval="[(4, ref('jbm_portal_self_service.group_self_service_manager'))]"/>    </record></odoo>
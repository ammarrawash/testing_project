<odoo>    <record id="approval_request_action_to_review_category" model="ir.actions.act_window">        <field name="name">Approvals to review</field>        <field name="res_model">approval.request</field>        <field name="view_mode">tree,form,kanban</field>        <field name="domain">[('category_id', '=', active_id)]</field>    </record>    <record id="approval_category_view_kanban" model="ir.ui.view">        <field name="name">approval.category.views.kanban</field>        <field name="model">approval.category</field>        <field name="inherit_id" ref="approvals.approval_category_view_kanban"/>        <field name="groups_id" eval="[(4, ref('jbm_portal_self_service.group_self_service_user'))]"/>        <field name="arch" type="xml">            <xpath expr="//button[@name='create_request']" position="after">                <button type="action" class="btn btn-sm btn-secondary float-right"                        name="%(jbm_portal_self_service.approval_request_action_to_review_category)d">Previous Request:                    <field name="previous_request_count"/>                </button>            </xpath>        </field>    </record>    <record id="approval_request_view_form" model="ir.ui.view">        <field name="name">approval.request</field>        <field name="model">approval.request</field>        <field name="inherit_id" ref="approvals.approval_request_view_form"/>        <field name="arch" type="xml">            <xpath expr="//header" position="inside">                <button name="action_print" type="object"                        string="Permit Work Report"                        class="oe_highlight"                        attrs="{'invisible': [('approval_type', '!=', 'permit_over_time')]}"/>            </xpath>            <xpath expr="//field[@name='request_employee_id']" position="after">                <field name="in_out_document_device"                       attrs="{'invisible': [('approval_type', '!=', 'permit_over_time')], 'required': [('approval_type', '=', 'permit_over_time')]}"                       string="IN / Out Documents or Devices"/>                <field name="determined_allowed"                       attrs="{'invisible': [('in_out_document_device', '!=', 'allowed')]}"                       string="Determine Allowed"/>                <field name="date_from"                       attrs="{'invisible': [('approval_type', '!=', 'permit_over_time')], 'required': [('approval_type', '=', 'permit_over_time')]}"/>                <field name="date_to"                       attrs="{'invisible': [('approval_type', '!=', 'permit_over_time')], 'required': [('approval_type', '=', 'permit_over_time')]}"/>            </xpath>            <xpath expr="//field[@name='category_id']" position="after">                <field name="product_category_id"                       attrs="{'invisible': [('approval_type', '!=', 'purchase')], 'required': [('approval_type', '=', 'purchase')], 'readonly': [('request_status', '=', 'approved')]}"                       domain="[('select_type', '=', select_type)]"/>                <field name="select_type" invisible="1"/>            </xpath><!--            <xpath expr="//page[@name='approvers']" position="after">--><!--                <page string="Dependent" name="dependent"--><!--                      attrs="{'invisible': [('select_type', '!=', 'insurance_request')]}">--><!--                    <field name="emp_children_ids" nolabel="1">--><!--                        <tree>--><!--                            <field name="name"/>--><!--                            <field name="relation" readonly="1"/>--><!--                            <field name="date_of_birth"/>--><!--                            <field name="qid"/>--><!--                            <field name="passport_number"/>--><!--                            &lt;!&ndash;                                    <field name="passport_issue_date" optional="hide"/>&ndash;&gt;--><!--                            &lt;!&ndash;                                    <field name="passport_issue_place" optional="hide"/>&ndash;&gt;--><!--                            &lt;!&ndash;                                    <field name="hamad_card_number"/>&ndash;&gt;--><!--                            &lt;!&ndash;                                    <field name="Hamad_card_expiry_date"/>&ndash;&gt;--><!--                            &lt;!&ndash;                                    <field name="Passport_expiry_date" optional="hide"/>&ndash;&gt;--><!--                            &lt;!&ndash;                                    <field name="insurance_details" optional="hide"/>&ndash;&gt;--><!--                            &lt;!&ndash;                                    <field name="school_name" optional="hide"/>&ndash;&gt;--><!--                            &lt;!&ndash;                                    <field name="age" invisible="1"/>&ndash;&gt;--><!--                        </tree>--><!--                    </field>--><!--                </page>--><!--            </xpath>-->            <xpath expr="//page[@name='approvers']" position="after">                <page string="Dependent" name="dependent" attrs="{'invisible': [('select_type', '!=', 'insurance_request')]}">                    <field name="children_id" domain="[('emp_id', '=', request_employee_id)]"/>                </page>            </xpath>        </field>    </record>    <record id="approval_product_line_view_tree" model="ir.ui.view">        <field name="name">approval.product.line</field>        <field name="model">approval.product.line</field>        <field name="inherit_id" ref="approvals.approval_product_line_view_tree"/>        <field name="arch" type="xml">            <xpath expr="//field[@name='product_id']" position="after">                <field name="product_category_id" invisible="1"/>            </xpath>            <xpath expr="//field[@name='product_id']" position="attributes">                <attribute name="domain">[('categ_id', '=', parent.product_category_id)]</attribute>                <attribute name="options">{'no_create': True, 'no_create_edit':True, "no_open": True}</attribute>            </xpath>        </field>    </record>    <record id="certification_portal_approval_category_action" model="ir.actions.act_window">        <field name="name">شهادة</field>        <field name="type">ir.actions.act_window</field>        <field name="res_model">approval.category</field>        <field name="view_mode">kanban</field>        <field name="domain">[('approval_type', '=', 'certification')]</field>    </record>    <record id="resignation_portal_approval_category_action" model="ir.actions.act_window">        <field name="name">طلب استقالة</field>        <field name="type">ir.actions.act_window</field>        <field name="res_model">approval.category</field>        <field name="view_mode">kanban</field>        <field name="domain">[('approval_type', '=', 'resignation')]</field>    </record>    <record id="clearances_portal_approval_category_action" model="ir.actions.act_window">        <field name="name">طلب اخلاء طرف</field>        <field name="type">ir.actions.act_window</field>        <field name="res_model">approval.category</field>        <field name="view_mode">kanban</field>        <field name="domain">[('approval_type', '=', 'clearance')]</field>    </record>    <record id="purchase_approval_category_action" model="ir.actions.act_window">        <field name="name">طلب شراء</field>        <field name="type">ir.actions.act_window</field>        <field name="res_model">approval.category</field>        <field name="view_mode">kanban</field>        <field name="domain">[('approval_type', '=', 'purchase'), ('select_type', '=', False)]</field>    </record>    <record id="it_equipment_category_action" model="ir.actions.act_window">        <field name="name">IT Equipment</field>        <field name="type">ir.actions.act_window</field>        <field name="res_model">approval.category</field>        <field name="view_mode">kanban</field><!--        <field name="domain">[('approval_type', '=', 'purchase'), ('select_type', '=', 'it_equipment')]</field>-->        <field name="domain">[('approval_type', '=', 'it'), ('is_it_device', '=', True)]</field>    </record>    <record id="insurance_request_category_action" model="ir.actions.act_window">        <field name="name">Insurance Request</field>        <field name="type">ir.actions.act_window</field>        <field name="res_model">approval.category</field>        <field name="view_mode">kanban</field>        <field name="domain">[('approval_type', '=', 'purchase'), ('select_type', '=', 'insurance_request')]</field>    </record>    <record id="training_course_category_action" model="ir.actions.act_window">        <field name="name">Training Course</field>        <field name="type">ir.actions.act_window</field>        <field name="res_model">approval.category</field>        <field name="view_mode">kanban</field>        <field name="domain">[('approval_type', '=', 'purchase'), ('select_type', '=', 'training_course')]</field>    </record>    <record id="over_time_category_action" model="ir.actions.act_window">        <field name="name">Offer Time Request</field>        <field name="type">ir.actions.act_window</field>        <field name="res_model">approval.category</field>        <field name="view_mode">kanban</field>        <field name="domain">[('approval_type', '=', 'permit_over_time')]</field>    </record>    <record id="attendance_approval_category_action" model="ir.actions.act_window">        <field name="name">طلب احتياج</field>        <field name="type">ir.actions.act_window</field>        <field name="res_model">approval.category</field>        <field name="view_mode">kanban</field>        <field name="domain">[('approval_type', '=', 'attendance')]</field>    </record>    <record id="change_data_approval_category_action" model="ir.actions.act_window">        <field name="name">تغيير بيانات</field>        <field name="type">ir.actions.act_window</field>        <field name="res_model">approval.category</field>        <field name="view_mode">kanban</field>        <field name="domain">[('approval_type', '=', 'change_data')]</field>    </record>    <record id="job_card_approval_category_action" model="ir.actions.act_window">        <field name="name">طلب البطاقة الوظيفية</field>        <field name="type">ir.actions.act_window</field>        <field name="res_model">approval.category</field>        <field name="view_mode">kanban</field>        <field name="domain">[('approval_type', '=', 'job_card')]</field>    </record>    <record id="work_start_approval_category_action" model="ir.actions.act_window">        <field name="name">طلب مباشرة عمل</field>        <field name="type">ir.actions.act_window</field>        <field name="res_model">approval.category</field>        <field name="view_mode">kanban</field>        <field name="domain">[('approval_type', '=', 'work_start')]</field>    </record>    <record id="performance_grievance_approval_category_action" model="ir.actions.act_window">        <field name="name">طلب تظلم تقييم الأداء الوظيفي</field>        <field name="type">ir.actions.act_window</field>        <field name="res_model">approval.category</field>        <field name="view_mode">kanban</field>        <field name="domain">[('approval_type', '=', 'performance_grievance')]</field>    </record>    <record id="access_approval_category_action" model="ir.actions.act_window">        <field name="name">صلاحية</field>        <field name="type">ir.actions.act_window</field>        <field name="res_model">approval.category</field>        <field name="view_mode">kanban</field>        <field name="domain">[('approval_type', '=', 'access')]</field>    </record>    <record id="it_approval_category_action" model="ir.actions.act_window">        <field name="name">دعم فني</field>        <field name="type">ir.actions.act_window</field>        <field name="res_model">approval.category</field>        <field name="view_mode">kanban</field>        <field name="domain">[('approval_type', '=', 'it'), ('is_it_device', '!=', True)]</field>    </record></odoo>
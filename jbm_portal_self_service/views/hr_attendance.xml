<odoo>    <record id="taqat_view_attendance_tree" model="ir.ui.view">        <field name="name">hr.attendance.tree</field>        <field name="model">hr.attendance</field>        <field name="inherit_id" ref="ake_early_late_attandence.taqat_view_attendance_tree"/>        <field name="groups_id" eval="[(4, ref('jbm_portal_self_service.group_self_service_user'))]"/>        <field name="arch" type="xml">            <xpath expr="//button[@name='action_department_manager_approve']" position="attributes">                <attribute name="invisible">1</attribute>            </xpath>            <xpath expr="//button[@name='action_manager_refuse']" position="attributes">                <attribute name="invisible">1</attribute>            </xpath>        </field>    </record>    <record id="view_attendance_tree_no_create" model="ir.ui.view">        <field name="name">hr.attendance.self.service</field>        <field name="model">hr.attendance</field>        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>        <field name="arch" type="xml">            <xpath expr="//tree" position="attributes">                <attribute name="create">0</attribute>                <attribute name="edit">0</attribute>                <attribute name="editable"></attribute>            </xpath>        </field>    </record>    <record id="view_attendance_tree_create" model="ir.ui.view">        <field name="name">hr.attendance.self.service</field>        <field name="model">hr.attendance</field>        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>        <field name="groups_id"               eval="[(4, ref('jbm_group_access_right_extended.custom_hr_manager')), (4, ref('base.group_erp_manager'))]"/>        <field name="arch" type="xml">            <xpath expr="//tree" position="attributes">                <attribute name="create">1</attribute>                <attribute name="edit">1</attribute>                <attribute name="editable">bottom</attribute>            </xpath>        </field>    </record>    <record id="view_hr_attendance_kanban_no_create" model="ir.ui.view">        <field name="name">hr.attendance.no.create.kanban</field>        <field name="model">hr.attendance</field>        <field name="inherit_id" ref="hr_attendance.view_hr_attendance_kanban"/>        <field name="arch" type="xml">            <xpath expr="//kanban" position="attributes">                <attribute name="create">0</attribute>                <attribute name="edit">0</attribute>            </xpath>        </field>    </record>    <record id="view_hr_attendance_kanban_create" model="ir.ui.view">        <field name="name">hr.attendance.no.create.kanban</field>        <field name="model">hr.attendance</field>        <field name="inherit_id" ref="hr_attendance.view_hr_attendance_kanban"/>        <field name="groups_id"               eval="[(4, ref('jbm_group_access_right_extended.custom_hr_manager')), (4, ref('base.group_erp_manager'))]"/>        <field name="arch" type="xml">            <xpath expr="//kanban" position="attributes">                <attribute name="create">1</attribute>                <attribute name="edit">1</attribute>            </xpath>        </field>    </record>    <record id="hr_attendance_view_form_no_create" model="ir.ui.view">        <field name="name">hr.attendance.no.create.form</field>        <field name="model">hr.attendance</field>        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>        <field name="arch" type="xml">            <xpath expr="//form" position="attributes">                <attribute name="create">0</attribute>                <attribute name="edit">0</attribute>            </xpath>        </field>    </record>    <record id="hr_attendance_view_form_create" model="ir.ui.view">        <field name="name">hr.attendance.no.create.form</field>        <field name="model">hr.attendance</field>        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>        <field name="groups_id"               eval="[(4, ref('jbm_group_access_right_extended.custom_hr_manager')), (4, ref('base.group_erp_manager'))]"/>        <field name="arch" type="xml">            <xpath expr="//form" position="attributes">                <attribute name="create">1</attribute>                <attribute name="edit">1</attribute>            </xpath>        </field>    </record>    <record id="hr_permissions_action" model="ir.actions.act_window">        <field name="name">الاستئذانات</field>        <field name="res_model">hr.attendance</field>        <field name="view_mode">tree</field>        <field name="domain">[ '|', ('is_late_check_in', '=', True),('is_early_check_out','=',True)]</field>        <field name="view_ids"               eval="[(5, 0, 0),                          (0, 0, {'view_mode': 'tree', 'view_id': ref('ake_early_late_attandence.taqat_view_attendance_tree')}),                        ]"/>    </record></odoo>
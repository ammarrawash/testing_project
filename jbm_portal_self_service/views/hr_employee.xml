<odoo>    <!--    Link portal users with employees-->    <record id="view_employee_form" model="ir.ui.view">        <field name="name">hr.employee.form</field>        <field name="model">hr.employee</field>        <field name="inherit_id" ref="hr.view_employee_form"/>        <field name="arch" type="xml">            <xpath expr="//field[@name='user_id']" position="attributes">                <attribute name="domain">[]</attribute>            </xpath>            <xpath expr="//field[@name='work_location_id']" position="after">                <field name="office_floor"/>                <field name="office_no"/>            </xpath>        </field>    </record>    <!--        Violation Balance-->    <record id="hr_employee_violation_balance_tree_view" model="ir.ui.view">        <field name="name">hr.employee.violation.balance.tree</field>        <field name="model">hr.employee</field>        <field name="inherit_id" ref="ake_attendance_sheet.hr_employee_violation_balance_tree_view"/>        <field name="arch" type="xml">            <xpath expr="//field[@name='name']" position="after">                <field name="arabic_name"/>            </xpath>        </field>    </record>    <!--    Portal contact views-->    <!-- Inherit Form View to Modify it -->    <record id="portal_employee_view_form" model="ir.ui.view">        <field name="name">portal.employee</field>        <field name="model">hr.employee.public</field>        <field name="priority">1000</field>        <field name="mode">primary</field>        <field name="inherit_id" ref="hr.hr_employee_public_view_form"/>        <field name="arch" type="xml">            <xpath expr="//notebook" position="attributes">                <attribute name="invisible">1</attribute>            </xpath>            <xpath expr="//field[@name='leave_manager_id']" position="attributes">                <attribute name="invisible">1</attribute>            </xpath>            <xpath expr="//field[@name='coach_id']" position="attributes">                <attribute name="invisible">1</attribute>            </xpath>            <xpath expr="//field[@name='signatory']" position="attributes">                <attribute name="invisible">1</attribute>            </xpath>            <xpath expr="//field[@name='job_title']" position="replace">                <field name="job_id" options='{"no_open": True, "no_create": True}'/>            </xpath>            <xpath expr="//field[@name='department_id']" position="attributes">                <attribute name="options">{"no_open": True, "no_create": True}</attribute>            </xpath>            <xpath expr="//field[@name='work_email']" position="after">                <field name="office_floor"/>                <field name="office_no"/>            </xpath>        </field>    </record>    <record id="portal_contact_view_kanban" model="ir.ui.view">        <field name="name">Portal Contact Kanban</field>        <field name="model">hr.employee.public</field>        <field name="inherit_id" ref="hr.hr_employee_public_view_kanban"/>        <field name="arch" type="xml">            <xpath expr="//span[hasclass('o_kanban_record_subtitle')]" position="replace">                <span t-if="record.job_id.raw_value" class="o_kanban_record_subtitle">                    <field name="job_id"/>                </span>            </xpath>        </field>    </record>    <record id="portal_contact_view_tree" model="ir.ui.view">        <field name="name">Portal Contact Tree</field>        <field name="model">hr.employee.public</field>        <field name="inherit_id" ref="hr.hr_employee_public_view_tree"/>        <field name="arch" type="xml">            <xpath expr="//field[@name='job_title']" position="replace">                <field name="job_id"/>            </xpath>        </field>    </record>    <record id="self_service_contact" model="ir.actions.act_window">        <field name="name">Contacts</field>        <field name="type">ir.actions.act_window</field>        <field name="res_model">hr.employee.public</field>        <field name="view_mode">kanban,tree,form</field>        <field name="view_ids"               eval="[(5, 0, 0),                          (0, 0, {'view_mode': 'kanban', 'view_id': ref('portal_contact_view_kanban')}),                          (0, 0, {'view_mode': 'tree', 'view_id': ref('portal_contact_view_tree')}),                          (0, 0, {'view_mode': 'form', 'view_id': ref('portal_employee_view_form')})]"/>    </record></odoo>
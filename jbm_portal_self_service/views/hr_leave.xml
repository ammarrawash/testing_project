<odoo>    <record id="hr_leave_view_form" model="ir.ui.view">        <field name="name">hr.holidays.view.form.view</field>        <field name="model">hr.leave</field>        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>        <field name="arch" type="xml">            <xpath expr="//field[@name='holiday_status_id']" position="after">                <field name="remaining_balance"/>            </xpath>        </field>    </record>    <record id="hr_leave_view_tree" model="ir.ui.view">        <field name="name">hr.holidays.view.tree</field>        <field name="model">hr.leave</field>        <field name="inherit_id" ref="hr_holidays.hr_leave_view_tree"/>        <field name="groups_id" eval="[(4, ref('jbm_portal_self_service.group_self_service_user'))]"/>        <field name="arch" type="xml">            <xpath expr="//button[@name='action_approve']" position="attributes">                <attribute name="invisible">1</attribute>            </xpath>            <xpath expr="//button[@name='action_validate']" position="attributes">                <attribute name="invisible">1</attribute>            </xpath>            <xpath expr="//button[@name='action_refuse']" position="attributes">                <attribute name="invisible">1</attribute>            </xpath>            <xpath expr="//field[@name='duration_display']" position="after">                <field name="remaining_balance" groups="base_portal_user.group_user_portal"/>                <field name="create_date" groups="base_portal_user.group_user_portal"/>            </xpath>        </field>    </record>    <record id="leave_portal_action" model="ir.actions.act_window">        <field name="name">الاجازات</field>        <field name="type">ir.actions.act_window</field>        <field name="res_model">hr.leave</field>        <field name="view_mode">tree,form</field>    </record></odoo>
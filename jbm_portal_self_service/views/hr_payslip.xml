<odoo>    <record id="view_hr_payslip_form" model="ir.ui.view">        <field name="name">hr.payslip</field>        <field name="model">hr.payslip</field>        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>        <field name="groups_id" eval="[(4, ref('jbm_portal_self_service.group_self_service_user'))]"/>        <field name="arch" type="xml">            <xpath expr="//button[@name='reset_to_draft']" position="attributes">                <attribute name="invisible">1</attribute>            </xpath>            <xpath expr="//button[@name='compute_sheet'][1]" position="attributes">                <attribute name="invisible">1</attribute>            </xpath>            <xpath expr="//button[@name='compute_sheet'][2]" position="attributes">                <attribute name="invisible">1</attribute>            </xpath>            <xpath expr="//button[@name='action_payslip_cancel']" position="attributes">                <attribute name="invisible">1</attribute>            </xpath>            <xpath expr="//button[@name='action_print_payslip']" position="attributes">                <attribute name="invisible">1</attribute>            </xpath>            <xpath expr="//button[@name='action_payslip_cancel']" position="after">                <button string="Print" name="action_print_portal_payslip" type="object"/>            </xpath>        </field>    </record></odoo>
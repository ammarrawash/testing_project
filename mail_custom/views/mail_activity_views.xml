<odoo>    <record id="mail_activity_view_form_popup" model="ir.ui.view">        <field name="name">mail.activity.custom</field>        <field name="model">mail.activity</field>        <field name="inherit_id" ref="mail.mail_activity_view_form_popup"/>        <field name="arch" type="xml">            <xpath expr="//field[@name='user_id']" position="after">                <field name="from_view" invisible="1"/>            </xpath>            <xpath expr="//button[@name='action_done_schedule_next'][1]" position="attributes">                <attribute name="context">{'mail_activity_quick_update': True,'default_from_view': True}</attribute>            </xpath>            <xpath expr="//button[@name='action_done_schedule_next'][2]" position="attributes">                <attribute name="context">{'mail_activity_quick_update': True,'default_from_view': True}</attribute>            </xpath>        </field>    </record></odoo>
<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="ebs_settings_inherit_payroll_overtime" model="ir.ui.view">
        <field name="name">ebs.settings.payroll</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_payroll.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='hr_payroll_localization']" position="inside">
                <div class="colhrac">
                    <label for="overtime_cutoff_day" string="Overtime Cutoff Day :"/>
                    <field name="overtime_cutoff_day" class="o_row d-flex"/>
                </div>
            </xpath>

        </field>
    </record>


</odoo>

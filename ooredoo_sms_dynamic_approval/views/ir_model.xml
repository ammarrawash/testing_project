<odoo>
    <data>
        <record id="ir_model_form_view_inherit" model="ir.ui.view">
            <field name="name">ir.model.form.view.inherit</field>
            <field name="model">ir.model</field>
            <field name="inherit_id" ref="base.view_model_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='views']" position="after">
                    <page string="Ooredoo SMS" name="ooredoo_sms" groups="base.group_no_one">
                        <group>
                            <group>
                                <field name="sms_receiver_id" domain="[('id', 'in', field_id), ('ttype', '=', 'many2one'), ('relation', 'in', ['res.users', 'hr.employee', 'res.partner'])]"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
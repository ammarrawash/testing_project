<?xml version="1.0" encoding="utf-8" ?>
<templates xml:space="preserve">
    <t t-name="sla_activity_type.ChatterTopbar" t-inherit="mail.ChatterTopbar" t-inherit-mode="extension">
        <xpath expr="//t[@t-if='chatter.hasActivities']" position="after">
           <button class="btn btn-link o_ChatterTopbar_button o_ChatterTopbar_buttonSLAScheduleActivity"
                   type="button"
                   t-on-click="chatter.onClickScheduleActivityType" title="Schedule an activity"
                   data-hotkey="shift+a">
                <i class="fa fa-clock-o"/>
               SLA Activity
            </button>
        </xpath>
    </t>
</templates>
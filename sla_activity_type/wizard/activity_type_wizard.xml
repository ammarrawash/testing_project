<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sla_activity_wizard_view_form" model="ir.ui.view">
            <field name="name">sla.activity.wizard.view.form</field>
            <field name="model">sla.activity.wizard</field>
            <field name="arch" type="xml">
                <form string="Sla Activity Wizard">
                    <group>
                        <field name="sla_activity_type_id"
                               options="{'no_create': True, 'no_edit':True, 'no_open': True}"/>
                    </group>
                    <footer>
                        <button name="action_apply" string="Apply"
                                type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="sla_activity_wizard_action" model="ir.actions.act_window">
            <field name="name">SLA Activity</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sla.activity.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
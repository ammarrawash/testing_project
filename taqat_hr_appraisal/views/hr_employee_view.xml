<odoo>
    <data>
        <record id="taqat_custom_hr_employee_view" model="ir.ui.view">
            <field name="name">custom.hr.employee.view</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='personal_information']//group" position="inside">
                    <group string="Degree" name="degree">
                        <field name="employee_degree" invisible="1"/>
                        <field name="employee_degree_date"/>
                        <field name="employee_Profession"/>
                        <field name="degree_field"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
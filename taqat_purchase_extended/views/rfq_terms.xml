<odoo>    <record id="rfq_terms_form" model="ir.ui.view">        <field name="name">rfq.terms.form</field>        <field name="model">rfq.terms</field>        <field name="arch" type="xml">            <form string="RFQ terms and conditions">                <sheet>                    <div class="oe_title">                        <label for="is_used" class="oe_edit_only"/>                        <field name="is_used"/>                    </div>                    <group>                        <group>                            <field name="rfq_terms_condition_en"/>                        </group>                        <group>                            <field name="rfq_terms_condition_ar" style="text-align: right!important;"/>                        </group>                    </group>                    <group>                        <group>                            <field name="note_en"/>                        </group>                        <group>                            <field name="note_ar" style="text-align: right!important;"/>                        </group>                    </group>                </sheet>            </form>        </field>    </record>    <record id="rfq_terms_tree" model="ir.ui.view">        <field name="name">rfq.terms.tree</field>        <field name="model">rfq.terms</field>        <field name="arch" type="xml">            <tree string="RFQ terms and conditions">                <field name="is_used"/>                <field name="rfq_terms_condition_en"/>                <field name="rfq_terms_condition_ar"/>                <field name="note_en"/>                <field name="note_ar"/>            </tree>        </field>    </record>    <record id="rfq_terms_action" model="ir.actions.act_window">        <field name="name">RFQ terms and conditions</field>        <field name="type">ir.actions.act_window</field>        <field name="res_model">rfq.terms</field>        <field name="view_mode">tree,form</field>    </record>    <menuitem id="rfq_terms_menu" name="RFQ terms and conditions" parent="purchase.menu_purchase_config"              action="rfq_terms_action" sequence="50"/></odoo>